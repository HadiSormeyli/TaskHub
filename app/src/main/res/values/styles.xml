<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultEditText" parent="Widget.Design.TextInputLayout">
        <item name="colorControlActivated">@color/indigo_a_400</item>
        <item name="colorControlHighlight">@color/indigo_a_400</item>
    </style>

    <style name="CategoryEditText" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">#CCFF9100</item>
        <item name="colorSecondary">#CCFF9100</item>
        <item name="colorControlActivated">#CCFF9100</item>
        <item name="colorControlHighlight">#CCFF9100</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/outer_radius</item>
        <item name="cornerSizeTopLeft">@dimen/outer_radius</item>
    </style>

    <style name="NightBottomSheetDialog">
        <item name="colorPrimary">@color/indigo_a_400</item>
        <item name="colorPrimaryVariant">@color/indigo_a_700</item>
        <item name="colorOnPrimary">@color/pure_black</item>
        <item name="colorSecondary">@color/indigo_a_400</item>
        <item name="colorSecondaryVariant">@color/indigo_a_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorControlNormal">@color/pure_white</item>
        <item name="colorSurface">@color/dark_foreground</item>
        <item name="colorOnSurface">?attr/colorPrimary</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorBackgroundFloating">?attr/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="NPWidget">
        <item name="android:textColor">?android:attr/textAppearance</item>
    </style>

    <style name="NPWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">56dp</item>
    </style>

    <style name="NPWidget.Holo.NumberPicker" parent="NPWidget.NumberPicker">
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@android:color/transparent</item>
        <item name="internalLayout">@layout/number_picker</item>
        <item name="mTextSize">18sp</item>
        <item name="mSelectedTextSize">32sp</item>
        <item name="internalMinWidth">64dp</item>
        <item name="internalMaxHeight">264dp</item>
    </style>
</resources>